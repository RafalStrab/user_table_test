<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" /> 
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/r/bs-3.3.5/dt-1.10.9,r-1.0.7,se-1.0.1/datatables.min.css"/>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite' filter='uglifycss'
                '@APPMaldabaBundle/Resources/public/css/style.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        {% block top_javascripts %}{% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block bottom_javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
            <script type="text/javascript" src="https://cdn.datatables.net/r/bs-3.3.5/dt-1.10.9,r-1.0.7,se-1.0.1/datatables.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
            {% javascripts filter='uglifyjs2'
                '@APPMaldabaBundle/Resources/public/js/script.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
